<Window x:Class="Buttons_Switchers_Hints.Task2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Buttons_Switchers_Hints"
        mc:Ignorable="d"
        Title="Task2" Height="450" Width="800" >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        
        <RadioButton Content="Red" Grid.Row="0" VerticalContentAlignment="Center" Checked="RED"/>
        <RadioButton Content="Yellow" Grid.Row="1" VerticalContentAlignment="Center" Checked="YELLOW"/>
        <RadioButton Content="Green" Grid.Row="2" VerticalContentAlignment="Center" Checked="GREEN"/>

        <Button x:Name="red" Grid.Column="1" Grid.Row="0"/>
        <Button x:Name="yellow" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="green" Grid.Column="1" Grid.Row="2"/>

        <Button Grid.Row="3" Grid.ColumnSpan="2" Margin="160 30 160 20" FontWeight="SemiBold" FontSize="20" Content="GO TO THE TASK 3" Click="Task3"/>
    </Grid>
</Window>
